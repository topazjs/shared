{
    "extends": [
        "airbnb",
        "prettier",
        "prettier/flowtype",
        "prettier/react"
    ],
    "plugins": [
        "flowtype",
        "react",
        "prettier"
    ],
    "parser": "babel-eslint",
    "rules": {
        "react/jsx-filename-extension": [
            1,
            {
                "extensions": [
                    ".js"
                ]
            }
        ],
        "prettier/prettier": "error",
        "max-len": [
            "error",
            120
        ]
    },
    "env": {
        "browser": true
    },
    "settings": {
        "import/resolver": {
            "webpack": {
                "config": "./config/webpack-common-config.js"
            }
        }
    }
}
